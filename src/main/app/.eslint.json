{
  "rules": {
    "react-hooks/exhaustive-deps": "off",
    "indent": [
      "error",
      4
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "spaced-comment": [
      "error",
      "always"
    ],
    "curly": "error",
    "eol-last": [
      "error",
      "always"
    ],
    "require-jsdoc": [
      "error", {
        "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": true,
          "ClassDeclaration": true,
          "ArrowFunctionExpression": true,
          "FunctionExpression": true
        }
      }
    ],
    "guard-for-in": "error",
    "no-restricted-imports": [
      "error",
      "rxjs",
      "Rx",
      "rxjs/Rx"
    ],
    "comma-spacing": "error",
    "keyword-spacing": "error",
    "object-curly-spacing": [
      "off",
      "always", {
        "objectsInObjects": false,
        "arraysInObjects": false
      }
    ],
    "space-infix-ops": "error",
    "padding-line-between-statements": [
      "error", {
        "blankLine":"always",
        "prev": "*",
        "next": "return"
      }
    ],
    "no-bitwise": "error",
    "no-console": [
      "error", {
        "allow": [
          "log",
          "warn",
          "error"
        ]
      }],
    "no-multiple-empty-lines": [
      "error", {
        "max":  1,
        "maxEOF": 0
      }
    ],
    "no-new-object": "error",
    "no-debugger": "error",
    "constructor-super": "error",
    "no-empty": "error",
    "no-eval": "error",
    "no-new": "error",
    "no-shadow": "error",
    "dot-notation": "off",
    "no-throw-literal": "error",
    "no-fallthrough": "error",
    "no-trailing-spaces": "error",
    "no-undef-init": "error",
    "no-unused-expressions": "error",
	"no-unused-vars": "error",
    "no-use-before-define": "error",
    "no-var": "error",
    "sort-keys": "off",
    "brace-style": "error",
    "prefer-const": "error",
    "radix": "error",
    "eqeqeq": [
      "error",
      "smart"
    ],
    "camelcase": [
      "off", {
        "properties": "always"
      }
    ]
  }
}